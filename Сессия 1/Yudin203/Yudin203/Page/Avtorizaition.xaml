<Page x:Class="Yudin203.Page.Avtorizaition"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Yudin203.Page"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Avtorizaition">

    <Grid MinWidth="800" MinHeight="450" Background="AntiqueWhite">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical" Width="400" Height="350">
            <Label Width="100" Content="Введите логин"/>
            <TextBox x:Name="txbLogin" Width="250" Height="20"/>
            <Label Width="100" Content="Введите пароль"/>
            <TextBox x:Name="txbPassword" Width="250" Height="20"/>
            <StackPanel Orientation="Horizontal" Margin="0 30" Width="100" Height="30">
                <Button Content="Войти" Height="30" Width="100" VerticalAlignment="Bottom"  HorizontalAlignment="Center" x:Name="btnVhod" Click="btnVhod_Click" />
            </StackPanel>
        </StackPanel>


    </Grid>
</Page>
